@model double
@using ConsoleAppProject.App02
@{
    ViewData["Title"] = "HealthMessage";
}

@{ 
    BMI bmi = new BMI();
    bmi.IndexBMI = Model;
}

<header class="jumbotron">
    <h1>Health Message</h1>
    <h2>by Andrew Stephenson</h2>
</header>
<section>
    <h2> Your BMI Index</h2>
    <p class="text-lead">
        @bmi.OutputHealthMessage()
    </p>
    <h2> BAME Message</h2>
    <p class="text-info">
        @bmi.OutputBameMessage()
    </p>
</section>


