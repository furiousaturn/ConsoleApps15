@model ConsoleAppProject.App01.DistanceConverter
@using ConsoleAppProject.App01
@{
    ViewData["Title"] = "AS Distance Converter";
}

<header class="text-center jumbotron justify-content-center">

    <h1>App01: Distance Converter</h1>
    <h2>by Andrew Stephenson</h2>
    <p>
        This app will convert a distance entered in one unit into
        the equivalent distance measured in another unit.
    </p>
</header>

<section>
    <form method="post">

        <h2>Convert from:</h2>
        <p>
            <label>From Unit: </label>
            <select asp-for="@Model.FromUnit">
                <option>@DistanceUnits.Miles</option>
                <option>@DistanceUnits.Metres</option>
                <option>@DistanceUnits.Feet</option>
            </select>
        </p>
        <p>
           
        <p>
            @if (Model.FromDistance == 0)
            {
                <input type="text" asp-for="@Model.FromDistance" value=""
                       placeholder="From Distance" required />
            }
            else
            {
                <input type="text" asp-for="@Model.FromDistance"
                       placeholder="From Distance" required />
            }
        </p>

        <h2>Convert to:</h2>
        <p>
            <label>From Unit:</label>
            <select asp-for="@Model.ToUnit">
                <option>@DistanceUnits.Miles</option>
                <option>@DistanceUnits.Metres</option>
                <option>@DistanceUnits.Feet</option>
            </select>
        </p>

      
        <p>
            @if (Model.ToDistance == 0)
            {
                <input type="text" asp-for="@Model.ToDistance" value=""
                       placeholder="To Distance" readonly />
            }
            else
            {
                <input type="text" asp-for="@Model.ToDistance"
                       value="@Model.ToDistance.ToString("0.00")"
                       placeholder="To Distance" readonly />
            }
        </p>
        <p>
            <button class="btn btn-success" type="submit">Calculate</button>
        </p>

    </form>
</section>